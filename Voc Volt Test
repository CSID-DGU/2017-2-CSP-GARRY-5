void setup() {
  Serial.begin(9600);
}

void loop() {
  float sensor_volt;
  float sensorValue=0;
  
  for(int x=0; x<=100; x++)
  {
    sensorValue = sensorValue + analogRead(A2);
  }
  
  sensorValue = sensorValue/100;
  sensor_volt = sensorValue/1024*5.0;
  Serial.print("sensor_volt=");
  Serial.print(sensor_volt);
  Serial.println("V");
  delay(1000);
}
